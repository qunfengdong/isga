<%args> # -*- cperl -*-
 $current_page => 1
</%args>

<%perl>
my $pager = SysMicro::Pager->new(Current => $current_page,
				 PerPage => 20);

my $account = SysMicro::Login->getAccount;
my $runs = SysMicro::Run->query( CreatedBy => $account, OrderBy => 'CreatedAt',
				 Pager => $pager );
$_->updateStatus() for @{$runs};
</%perl>

<& /Run/list_my.mas, account => $account, pager => $pager, runs => $runs &>
