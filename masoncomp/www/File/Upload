<%perl> # -*- cperl -*-

# check that we have a form cached and it is the correct type
my $form = $ISGA::WebApp->saved_args->{'form'};
$form and $form->get_formname() eq 'file_upload'
  or $form =  ISGA::FormEngine::File->Upload(\%ARGS);

return $m->comp('/File/upload.mas', form => $form);

</%perl>
