<%args>
 $pipeline_builder
 $cluster => undef
</%args>

<%perl>
if(defined $cluster){
  $pipeline_builder->update($cluster);
  sleep(1);
}
</%perl>

<& /PipelineBuilder/overview.mas, pipeline_builder => $pipeline_builder &>
