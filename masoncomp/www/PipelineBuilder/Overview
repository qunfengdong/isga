<sys:style type="text/css" media="screen">
  @import "/include/css/wide-modal.css";
</sys:style>



<sys:script type="text/javascript">
$(document).ready(modalUpdate);
function modalUpdate() {
  $('.modal').modal({hide_on_overlay_click:false});
}
</sys:script>

<sys:script type="text/javascript">
$(document).ready(modalclose);
function modalclose(){
$('input.cancel') 
    .livequery('click', function(event) { 
        $("#modal_content").remove();
        $("#modal_overlay").remove();
        return false; 
    });
}
</sys:script>

<sys:script type="text/javascript">
$(document).ready(showActions);
function showActions() {
  $("area.cluster")
   .click(
     function(){  
    $("#JT").remove();
      $.ajax({
        url: "/PipelineBuilder/ChooseComponent?pipeline_builder=<% $pipeline_builder %>&class=cluster&cluster="+this.id,
        success: function(html){
          $('#modal_content').append(html);
        }
      });
      return false;
     });
  $("area.clusterOption")
   .click(
     function(){
      $("#JT").remove();
      $.ajax({
        url: "/PipelineBuilder/ChooseComponent?pipeline_builder=<% $pipeline_builder %>&class=clusterOption&cluster="+this.id,
        success: function(html){
          $('#modal_content').append(html);
        }
      });
      return false;
    });
  $("area.requiredCluster")
   .click(
     function(){
      $("#JT").remove();
      $.ajax({
        url: "/PipelineBuilder/ChooseComponent?pipeline_builder=<% $pipeline_builder %>&class=requiredCluster&cluster="+this.id,
        success: function(html){
          $('#modal_content').append(html);
        }
      });
      return false;
    });
  $("area.nolink")
   .click(function(){return false});
}
</sys:script>

