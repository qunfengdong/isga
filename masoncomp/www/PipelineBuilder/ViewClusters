<sys:script type="text/javascript">
$(document).ready(jtUpdate);

function jtUpdate() {

  $("area.cluster")
   .hover( 
         function(){
         JT_area_show(this.href,this.id,this.name,this.coords)},
         function(){$('#JT').remove();
      })
   .click(function(){return false});
}

</sys:script>
