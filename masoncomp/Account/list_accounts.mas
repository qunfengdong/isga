<%args>
 @accounts
</%args>

<table width="100%" class="tablesorter list">
<thead>
 <tr class="list_label">
  <th>Name</th>
  <th>Email</th>
  <th>Institution</th>
  <th>Status</th>
 </tr>
</thead>
<tbody>
% foreach ( @accounts ) {
 <tr>
  <td><a href="/Account/View?account=<% $_ %>"><% $_->getName %></a></td>
  <td><% $_->getEmail %></td>
  <td><% $_->getInstitution %></td>
  <td><% $_->getStatus->getName %></td>
 </tr>
% }
</tbody>
</table>

<& /site/table_sorter &>