[interface]
classification = Genome Analysis

[parameters]
$;OTHER_OPTS$; =
;;Name any of species, strain, accession, project or any other ID
$;IDENTIFIER; =
;;ANALYSIS_FOLDER will be created. The name is by convention "<FLOWCELL_FOLDER>.alignment/Analysis_01"
$;ANALYSIS_FOLDER$; =
;;The merged map.list file. Available as "<FLOWCELL_FOLDER>.alignment/map.list"
$;MERGED_MAPLIST$; = 
;;The scoring matrix file for basecalling. The files come (scoring_matrix_hom.txt, scoring_matrix_het.txt, scoring_matrix_5perc.txt) with the shore installation. On bioportal, they are located at /bioportal/sw/encap/shore-0.4.1/share/docs/. The commonly used one is - scoring_matrix_hom.txt.
$;SCORING_MATRIX$; = 

[input]
;;None of the INPUT variables are put to use in this component
$;INPUT_FILE_LIST$; = 
;;INPUT_FILE is the .shore file in the index folder. See shore_preprocess for details on the index folder.
$;INPUT_FILE$; = 
$;INPUT_DIRECTORY$; = 
;; the following is only used when iterating over an INPUT_DIRECTORY
$;INPUT_EXTENSION$; = shore

[output]
$;OUTPUT_TOKEN$; = default
$;OUTPUT_DIRECTORY$; = $;REPOSITORY_ROOT$;/output_repository/$;COMPONENT_NAME$;/$;PIPELINEID$;_$;OUTPUT_TOKEN$;
$;BSML_OUTPUT_LIST$; = $;OUTPUT_DIRECTORY$;/$;COMPONENT_NAME$;.bsml.list
$;RAW_OUTPUT_LIST$; = $;OUTPUT_DIRECTORY$;/$;COMPONENT_NAME$;.raw.list

[component]
$;COMPONENT_NAME$; = shore_converge
$;DESCRIPTION$; = none
$;WORKFLOW_REPOSITORY$; = $;REPOSITORY_ROOT$;/workflow/runtime/$;COMPONENT_NAME$;/$;PIPELINEID$;_$;OUTPUT_TOKEN$;
$;PIPELINE_TOKEN$; = unnamed

;The version,revision,tag here is set by an interpolated CVS tag
$;VERSION$; = 2.0
$;RELEASE_TAG$; = $Name$
$;REVISION$;            = $Revision: 5801 $

$;TEMPLATE_XML$; = $;DOCS_DIR$;/$;COMPONENT_NAME$;.xml
$;ITERATOR1$; = i1
$;ITERATOR1_XML$; = $;DOCS_DIR$;/$;COMPONENT_NAME$;.$;ITERATOR1$;.xml

;Distributed options
$;GROUP_COUNT$; = 150
$;NODISTRIB$; = 0

;the following keys are replaced at runtime by the invocation script
$;COMPONENT_CONFIG$; = 
$;COMPONENT_XML$; = 
$;PIPELINE_XML$; = 
$;PIPELINEID$; = 

[include]
$;PROJECT_CONFIG$;=


