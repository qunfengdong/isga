# -*- cperl -*-


use Bio::Seq;
use Bio::SeqIO;


#------------------------------------------------------------------------

=item public string getResidues();

Retrieves the sequence for a gene.

=cut 
#------------------------------------------------------------------------
  sub getResidues {

    my $self = shift;

    my $sequence = $self->getParent->getParent->getResidues;

    return Bio::Seq->new( -seq => $sequence )->translate->seq;
  }

