<%args> # -*- cperl -*-
 $show_hidden => undef
</%args>

<%perl>

my $account = SysMicro::Login->getAccount;

my %args = ( CreatedBy => $account, OrderBy => 'CreatedAt', ExistsOutsideCollection => 1 );

$show_hidden or $args{IsHidden} = 0;

my $files = SysMicro::FileResource->query( %args );
</%perl>

<& /File/browse_my.mas, files => $files, show_hidden => $show_hidden &>
