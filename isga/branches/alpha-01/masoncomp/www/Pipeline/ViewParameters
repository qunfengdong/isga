<%args> # -*- cperl -*-
 $pipeline
 $cluster
 $hide_unset => 1
</%args>

<%perl>

my $builder = SysMicro::ClusterBuilder->new($cluster);

if ( $pipeline->isa('SysMicro::UserPipeline') ) {
  $builder = $builder->injectMaskValues($pipeline, $cluster);
  bless $builder, 'SysMicro::ClusterBuilder';
}

</%perl>

<& /Pipeline/view_parameters.mas, cluster => $cluster, 
  builder => $builder, pipeline => $pipeline, hide_unset => $hide_unset &>



 
