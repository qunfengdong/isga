<%args> # -*- cperl -*-
 $run 
</%args>

<%perl>

if ( ! ISGA::Login->hasGroup( $admin ) ) {
  $run->getCreatedBy == ISGA::Login->getAccount
    or X::User::Denied->throw;
}

</%perl>

<& /Run/view.mas, run => $run &>

<%once>

  my $admin = ISGA::Group->new( Name => 'Run Administrators' );

</%once>
