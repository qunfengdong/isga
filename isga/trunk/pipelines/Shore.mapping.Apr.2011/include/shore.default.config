[interface]
classification = Genome Analysis

[parameters]
;;Applications: genomic, mRNA ChIPseq
$;APPLICATION$;=___application___
;;Run id value between 1000 and 9999
$;RUNID$;=1001
;;Maximum edit distance
$;EDITDISTANCE$;=___editdistance___
;; Maximum number of gaps (0-n) only for genomemapper
$;MAXGAPS$;=___maxgaps___
;;Number of processors/cores
$;CORES$;=1
;;Mapping tool can be one of genomemapper bowtie bwa
$;MAPPER$;=___mapper___
;;Expected insert size has to be larger than 0
$;INSERT_SIZE$;=___insert_size___
;;Library identifier, defines name space of the read identifiers (equal or large than 1)
$;LIBRARY_IDENTIFIER$;=___library_identifier___
;; Species name
$;NAME$;=___name___
;;Scoring Matrix file
$;MATRIX_FILE$;=/nfs/bio/sw/share/shore-0.6.unstable/scoring_matrices/scoring_matrix_hom.txt
;;Set the allowd range of repetitiveness int,int
$;HITS_RANGE$;=___min_hit___,___max_hit___
   

[input]
;; space-separated list
$;INPUT_FILES$;=
;;read1 fastq file
$;X$;=___Shore_Input___
;;read2 fastq file please use  "-y <filename>"
$;Y$;=___Shore_Input_Pair___
;;This parameter should be <index_folder/xxx.shore>  
$;SHORE_INDEX$;=___shore_index___

[output]
$;OUTPUT_TOKEN$;=default
$;OUTPUT_DIRECTORY$;=$;REPOSITORY_ROOT$;/output_repository/$;COMPONENT_NAME$;/$;PIPELINEID$;_$;OUTPUT_TOKEN$;


[component]
$;COMPONENT_NAME$;=shore
$;DESCRIPTION$;=none
$;WORKFLOW_REPOSITORY$;=$;REPOSITORY_ROOT$;/workflow/runtime/$;COMPONENT_NAME$;/$;PIPELINEID$;_$;OUTPUT_TOKEN$;
$;PIPELINE_TOKEN$;=unnamed

;The version,revision,tag here is set by an interpolated CVS tag
$;VERSION$;=2.0
$;RELEASE_TAG$;=$Name$
$;REVISION$;=$Revision: 5801 $

$;TEMPLATE_XML$;=$;DOCS_DIR$;/$;COMPONENT_NAME$;.xml

;the following keys are replaced at runtime by the invocation script
$;COMPONENT_CONFIG$;=
$;COMPONENT_XML$;=
$;PIPELINE_XML$;=
$;PIPELINEID$;=

[include]
$;PROJECT_CONFIG$;=
